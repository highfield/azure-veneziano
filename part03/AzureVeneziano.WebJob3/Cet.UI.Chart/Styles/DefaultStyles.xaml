<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:Cet.UI.Chart"
    >

    <local:ColorToBrushConverter x:Key="cvSolidBrush" />

    <LinearGradientBrush 
        x:Key="ChartCanvasBackgroundBrush" 
        StartPoint="0.3,0.0"
        EndPoint="0.6,1.0"
        >
        <GradientStop Color="Snow" Offset="0.0" />
        <GradientStop Color="WhiteSmoke" Offset="1.0" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ChartCanvasBorderBrush">DimGray</SolidColorBrush>
    <Thickness x:Key="ChartCanvasBorderThickness">1</Thickness>

    
    <DataTemplate x:Key="dtplLegendButtonChartPlotCartesianLinear">
        <DockPanel
            LastChildFill="False"
            >
            <Rectangle
                Fill="{Binding Path=LineColor, Converter={StaticResource cvSolidBrush}}"
                Stroke="Black"
                StrokeThickness="1"
                Width="16"
                Height="16"
                DockPanel.Dock="Left"
                />

            <TextBlock
                Text="{Binding Path=Description}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="NoWrap"
                Margin="4,0,0,0"
                VerticalAlignment="Center"
                />
        </DockPanel>
    </DataTemplate>

    
    <DataTemplate x:Key="dtplChartFunctionPanZoomCartesian">
        <Image
            Source="/Cet.UI.Chart;component/Themes/Images/pan.png"
            Width="64"
            Height="64"
            />
    </DataTemplate>
    

    <DataTemplate x:Key="dtplChartInspectorCartesianLine">
        <DataTemplate.Resources>
            <Style x:Key="myHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
                <Setter Property="Visibility" Value="Collapsed" />
            </Style>
        </DataTemplate.Resources>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <CheckBox
                Grid.Row="0" Grid.Column="0"
                IsChecked="{Binding Path=IsVisible, Mode=TwoWay}"
                >
                <Rectangle
                    Fill="{Binding Path=LineColor, Converter={StaticResource cvSolidBrush}}"
                    Stroke="Black"
                    StrokeThickness="1"
                    Width="16"
                    Height="16"
                    />
            </CheckBox>

            <StackPanel
                Orientation="Vertical"
                Grid.Row="0" Grid.Column="1"
                Margin="24,0,0,0"
                >
                <!--<TextBlock
                    Text="{Binding Path=Description}"
                    HorizontalAlignment="Right"
                    />-->

                <TextBlock
                    Text="{Binding Path=FormattedReference}"
                    HorizontalAlignment="Right"
                    />
            </StackPanel>

            <ListView
                Grid.Row="1" Grid.Column="0"
                Grid.ColumnSpan="2"
                ItemsSource="{Binding Path=Items}"
                Margin="0,16,0,0"
                >
                <ListView.View>
                    <GridView
                        AllowsColumnReorder="False"
                        ColumnHeaderContainerStyle="{StaticResource myHeaderStyle}"
                        >
                        <!--<GridViewColumn
                            Width="30"
                            >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Rectangle
                                        Fill="{Binding Path=LineColor, Converter={StaticResource cvSolidBrush}}"
                                        Stroke="Black"
                                        StrokeThickness="1"
                                        Width="14"
                                        Height="14"
                                        />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>-->

                        <GridViewColumn
                            Width="80"
                            >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Text="{Binding Path=RelatedPlot.Description}"
                                        FontSize="10"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap"
                                        />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn
                            Width="100"
                            >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Text="{Binding Path=Value}"
                                        FontSize="10"
                                        FontWeight="Bold"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap"
                                        />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </DataTemplate>


